{
  "openapi": "3.0.0",
  "info": {
    "title": "Compliance Hawk API",
    "description": "Backend Skill for IBM watsonx Orchestrate to audit contracts.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://encyclopedic-colloidal-herta.ngrok-free.dev"
    }
  ],
  "paths": {
    "/audit_contract": {
      "post": {
        "summary": "Audit Contract",
        "operationId": "audit_contract_audit_contract_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuditRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuditResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Root",
        "operationId": "root__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuditRequest": {
        "properties": {
          "contract_text": {
            "type": "string",
            "title": "Contract Text"
          }
        },
        "type": "object",
        "required": [
          "contract_text"
        ],
        "title": "AuditRequest"
      },
      "AuditResponse": {
        "properties": {
          "status": {
            "type": "string",
            "title": "Status"
          },
          "risk_score": {
            "type": "integer",
            "title": "Risk Score"
          },
          "explanation": {
            "type": "string",
            "title": "Explanation"
          }
        },
        "type": "object",
        "required": [
          "status",
          "risk_score",
          "explanation"
        ],
        "title": "AuditResponse"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}